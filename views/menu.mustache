<form action="/order/create" method="POST">
    <label for="customerName">Customer Name:</label>
    <input type="text" id="customerName" name="customerName" required>
    <br><br>

    <!-- Add the Date Picker here -->
    <label for="orderDate">Order Date:</label>
    <input type="date" id="orderDate" name="orderDate" required>
    <br><br>

    <table border="1" id="menuTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Price</th>
                <th>Image</th>
                <th>Select</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            {{#menu}}
            <tr>
                <td>{{Id}}</td>
                <td>{{Name}}</td>
                <td>{{Type}}</td>
                <td>{{Price}}</td>
                <td>
                    {{#Image}}
                    <img src="{{Image}}" alt="{{Name}}" width="50" height="50">
                    {{/Image}}
                </td>
                <td>
                    <input type="checkbox" name="menuItemIds[]" value="{{Id}}">
                </td>
                <td>
                    <input type="number" name="quantities[{{Id}}]" min="1" value="1">
                </td>
            </tr>
            {{/menu}}
        </tbody>
    </table>

    <button type="submit">Place Order</button>
</form>

<a href="/orders">Go to orders</a>